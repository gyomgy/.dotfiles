# ~/.XCompose — Guillaume’s Compose key map (Compose = Druck)
# Usage: Compose + + + letter → Greek letter
#         Compose + + + Shift + letter → uppercase Greek

include "%L"

# --- Greek lowercase ---
<Multi_key> <plus> <a> : "α"   U03B1 # alpha
<Multi_key> <plus> <b> : "β"   U03B2 # beta
<Multi_key> <plus> <g> : "γ"   U03B3 # gamma
<Multi_key> <plus> <d> : "δ"   U03B4 # delta
<Multi_key> <plus> <e> : "ε"   U03B5 # epsilon
<Multi_key> <plus> <z> : "ζ"   U03B6 # zeta
<Multi_key> <plus> <h> : "η"   U03B7 # eta
<Multi_key> <plus> <t> : "θ"   U03B8 # theta
<Multi_key> <plus> <i> : "ι"   U03B9 # iota
<Multi_key> <plus> <k> : "κ"   U03BA # kappa
<Multi_key> <plus> <l> : "λ"   U03BB # lambda
<Multi_key> <plus> <m> : "μ"   U03BC # mu
<Multi_key> <plus> <n> : "ν"   U03BD # nu
<Multi_key> <plus> <x> : "ξ"   U03BE # xi
<Multi_key> <plus> <o> : "ο"   U03BF # omicron
<Multi_key> <plus> <p> : "π"   U03C0 # pi
<Multi_key> <plus> <r> : "ρ"   U03C1 # rho
<Multi_key> <plus> <s> : "σ"   U03C3 # sigma
<Multi_key> <plus> <f> : "φ"   U03C6 # phi
<Multi_key> <plus> <c> : "χ"   U03C7 # chi
<Multi_key> <plus> <y> : "ψ"   U03C8 # psi
<Multi_key> <plus> <w> : "ω"   U03C9 # omega

