<Multi_key> <plus> <'> <'> : "”"   U201D # right double quote
<Multi_key> <plus> <"> <"> : "“"   U201C # left double quote
<Multi_key> <plus> <'> <,> : "‚"   U201A # single low quote
<Multi_key> <plus> <,> <'> : "‘"   U2018 # single high quote
