# --- Math symbols ---
<Multi_key> <plus> <minus> : "±"   U00B1 # plus-minus
<Multi_key> <plus> <e> <q> : "≡"   U2261 # equivalence
<Multi_key> <plus> <e> <q> : "≡"   U2261 # equivalence
<Multi_key> <plus> <equal> : "≈"   U2248 # approximately equal
<Multi_key> <plus> <period> : "≠"   U2260 # not equal
<Multi_key> <plus> <less> : "≤"   U2264 # less or equal
<Multi_key> <plus> <greater> : "≥"   U2265 # greater or equal
<Multi_key> <plus> <i> <n> : "∈"   U2208 # element of
<Multi_key> <plus> <p> <r> : "∝"   U221D # proportional to
<Multi_key> <s> <q> : "√"   U221A # square root
<Multi_key> <i> <n> <t> : "∫" U222B # integral
<Multi_key> <d> <e> <l> : "∇" U2207 # nabla

# --- Arrows ---
<Multi_key> <plus> <l> : "←"   U2190
