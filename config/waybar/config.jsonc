    },
    "custom/power": {
        "format" : "‚èª",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "/home/gyom/.config/waybar/power-menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "systemctl poweroff",
			"reboot": "systemctl reboot",
			"lock": "hyprlock",
			"suspend": "systemctl suspend",
			"logout": "loginctl terminate-user \"\"",
		}
    }
}
